<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VisonOfMan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kesari</item>
        <item name="colorPrimaryVariant">#FFB57C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kesari</item>
        <item name="colorSecondaryVariant">@color/kesari</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VisonOfMan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VisonOfMan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VisonOfMan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Dialoganimation">
        <item name="android:windowEnterAnimation" >@anim/bottam_dialog_slide_in</item>
        <item name="android:windowExitAnimation" >@anim/bottam_dialog_slide_out</item>
    </style>
</resources>